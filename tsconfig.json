{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true,
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"baseUrl": "./",
		"types": ["unplugin-vue-define-options/macros-global"],
		"paths": {
		"@/*":["packages/*"]
		}
	},
	"include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
     "components.d.ts",
     "auto-imports.d.ts",
     "vite-env.d.ts"
  ],
	"references": [{ "path": "./tsconfig.node.json" }]
}
